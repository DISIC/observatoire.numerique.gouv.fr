{
	"extends": ["next/core-web-vitals", "prettier"],
	"plugins": ["prettier"],
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaVersion": 8,
		"requireConfigFile": false,
		"babelOptions": {
			"presets": ["@babel/preset-react"]
		}
	},
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"prettier/prettier": [2, { "tabWidth": 2, "useTabs": true }]
	}
}
